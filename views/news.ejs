<body>
    <div class="page-container">
        <div class="content-wrap">
             <% include ./segments/header%>
            <!-- navigation bar -->
            <% include ./segments/navbar %>
            <!-- this part contains news -->
            <div class="flx-vid-container">
                <div class="flx-cld-major">
                    <div class="section-title">
                        সকল সংবাদ
                    </div>
                    <br>
                </div>
            </div>
            <div class="flx-news-container">
                
                <div class="flx-cld-minor">
                </div>

                <div class="flx-cld-major">
                    <br>
                    <% for (let i=0; i< data.length; i++) { %>
                        <div class="flx-card">
                            <img src="<%=data[i].photoUrl%>" alt="This image is not found">
                            <% if( data[i].title.length > 70) { %>
                            <div class="item-title">
                                <a href="/news/<%=data[i]._id%>"><%= data[i].title.substring(0,69) + ' . . .'%></a>                                
                            </div>
                            <%} else{ %>
                            <div class="item-title">
                                <a href="/news/<%=data[i]._id%>"><%= data[i].title%></a>                              
                            </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>

                <div class="flx-cld-minor">
                </div>
                
            </div>
        </div>
    </div>

    <% include ./segments/footer.ejs %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
