  <body>
    <div class="page-container">
      <div class="content-wrap">
          <% include ./segments/header%>
        <form action="/admin/createVideo" method="POST">
          <!-- navigation bar -->
          <% include ./segments/adminNavbar %>
          <div class="form-container">
            <div class="part">
              <div class="title">
                Title:
              </div>
              <div class="input-elm">
                  <input type="text" name="title" required>
              </div>
            </div>
  
            <div class="part">
              <div class="title">
                Secect a Class:
              </div>
              <select  class="btn btn-info" name="class" id="classId" required>
                  <option disabled selected value> -- Select a class -- </option>
                  <% for(var i = 0 ; i < classes.length; i++) {%>
                    <option value="<%= classes[i] %>"><%= classes[i] %></option>                    
                  <% } %>                    
              </select>
            </div>
  
            <div class="part">
              <div class="title">
                Enter Video (enter embedded url):
              </div>
              <div class="input-elm">
                  <input type="text" name="videoUrl" required>
              </div>
            </div>
  
  
            <div class="btn-container">
              <button type="submit" class="btn btn-success">SUBMIT</button>
            </div>
            
          </div>
        </form>
      </div>
    </div>
