<!DOCTYPE html>
<html lang="en">
  <head>
     

    <!-- google search engine canonical -->
    <link rel="canonical" href="http://www.purboposhcim.com/">
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />        
    <meta name="title" content="পূর্ব পশ্চিম">
    <!-- open graph protocol tobe recognized by facebook-->
    <meta property="og:title" content="পূর্ব পশ্চিম" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.purboposhcim.com/" />
    <meta property="og:image" content="https://lh3.googleusercontent.com/XNDFk3-aaY5pMZZsaO3HuLVXo_tu5EH0Yn9SJZLgQiJAU2QuNtydYejHHVj3cQO9ca_rTku7HOJzrIcRu-kRRU-_ydY-o_KKFNHksysy1hOj_EEtNTx3Zj_47-sHLXcMTs9tbFto=w600-h315-p-k">
    <meta property="og:description" content="" />
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="fb:app_id" content="1182939572060897">

    <meta name="google-site-verification" content="07c-4A5YqRT9nWhJpg2XI-kzYDmmJB3-8rLVYlL2_XA" />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <!-- google fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Courier+Prime&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Hind Siliguri"
    />
    <!-- google adsense -->
    <script data-ad-client="ca-pub-4266924221770969" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    
    <link rel="stylesheet" href="/assets/cssFiles/header.css" />
    <!-- stylesheet for navbar -->
    <link rel="stylesheet" href="/assets/cssFiles/navbar.css" />
    <link rel="stylesheet" href="/assets/cssFiles/home.css" />
    <link rel="stylesheet" href="/assets/cssFiles/footer.css" />

    <title>পূর্ব পশ্চিম</title>

   
  </head>

  <body>
    <!-- for fb page -->
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0&appId=1182939572060897&autoLogAppEvents=1" nonce="hU56tX9u"></script>

    <div class="page-container">
      <div class="content-wrap">
        <% include ./segments/header%>
        <!-- navigation bar -->
        <% include ./segments/navbar %>

        <main>
          <!-- this part contains recent news -->
          <!-- ad -->
          <div class="ad-container">
            <a href="/contactUs"><img src="/assets/images/ad.jpg" style="border: 0;" title="Call for ad"/></a>
          </div>
          <div class="flx-news-container">               
            <div class="flx-cld-major">              
              <!-- latest news -->
              <% if(newsData['সাম্প্রতিক'].length !== 0 ) { %> 
                <div class="recent">
                  <div class="sec-title">
                    <div class="title">
                      সাম্প্রতিক
                    </div>
                    <div class="see-more">
                      <a href="/news/সাম্প্রতিক">আরও দেখুন ></a>
                    </div>
                  </div>
                  <div class="slider">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <% for (let j=0; j< Math.min(newsData['সাম্প্রতিক'] .length, 6); j++) { %>
                          <%if(j==0) {%>
                            <li data-target="#carouselExampleCaptions" data-slide-to="<%=j%>" class="active"></li>
                          <% } else {%>
                            <li data-target="#carouselExampleCaptions" data-slide-to="<%=j%>"></li>
                          <% } %>
                        <% } %>
                      </ol>
                      <div class="carousel-inner">
                        <% for (let j=0; j< Math.min(newsData['সাম্প্রতিক'] .length, 6); j++) { %>
                          <% if(j==0) {%>
                            <div class= "carousel-item active" >
                              <img class="news_image" src="<%=newsData['সাম্প্রতিক'][j].photoUrl%>" alt="This image is not found" class="d-block w-100" >
                              <div class="carousel-caption  d-md-block">
                                <a href="/newsDetails/<%=newsData['সাম্প্রতিক'][j]._id%>/<%= newsData['সাম্প্রতিক'][j].title.trim().replace(/\s/g,'-')%>"><%= newsData['সাম্প্রতিক'][j].title%></a>
                              </div>
                            </div>
                          <%} else {%>
                            <div class= "carousel-item" >
                              <img class="news_image" src="<%=newsData['সাম্প্রতিক'][j].photoUrl%>" alt="This image is not found" class="d-block w-100" >
                              <div class="carousel-caption  d-md-block">
                                <a href="/newsDetails/<%=newsData['সাম্প্রতিক'][j]._id%>/<%= newsData['সাম্প্রতিক'][j].title.trim().replace(/\s/g,'-')%>"><%= newsData['সাম্প্রতিক'][j].title%></a>                          
                              </div>
                            </div>
                          <% } %> 
                        <% } %>                     
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
                  <% for (let j=9; j< Math.min(newsData['সাম্প্রতিক'] .length, 18); j++) { %>
                    <div class="news-card">         
                      <div class="news-cont">
                        <div class="img-cont">
                          <img class="news_image"
                            src="<%=newsData['সাম্প্রতিক'][j].photoUrl%>"
                            alt="This image is not found"
                          />
                        </div>                        
                        <div class="item-title">
                          <a href="/newsDetails/<%=newsData['সাম্প্রতিক'][j]._id%>/<%= newsData['সাম্প্রতিক'][j].title.trim().replace(/\s/g,'-')%>"><%= newsData['সাম্প্রতিক'][j].title%></a>        
                          <div class="date-cont">
                            <%= newsData['সাম্প্রতিক'][j].bdFormatTime.timeString%>
                          </div>
                        </div> 
                        
                      </div>      
                    </div>
                  <% } %>
                
                </div>
              <% } %>
            </div>

            <div class="flx-cld-minor">
              <div class="fb-page-cont">
                <div class="sec-title">
                  ফেইসবুক পেইজ
                </div>
                <div class="holder">
                  <div class="fb-page" data-href="https://www.facebook.com/purboposhcimnews/" data-tabs="timeline" data-width="" data-height="210" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/purboposhcimnews/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/purboposhcimnews/">purboposhcim.com</a></blockquote></div>
                </div>                
              </div>
            </div>

          </div>
          <!-- all other news -->
          <% for (let i=0; i< classes.length; i++) { %>
            <% if(newsData[classes[i]].length !== 0 ) { %>
              <div class="flx-news-container"> 
                <div class="flx-cld-major"> 
                  <div class="general">
                    <div class="sec-title">
                      <div class="title">
                        <%= classes[i] %>
                      </div>
                      <div class="see-more">
                        <a href="/news/<%=classes[i] %>">আরও দেখুন ></a>
                      </div>
                    </div>
      
                    <div class="main-news">
                      <div class="news-card">         
                        <div class="news-cont">
                          <div class="img-cont">
                            <img class="news_image"
                              src="<%=newsData[classes[i]][0].photoUrl%>"
                              alt="This image is not found"
                            />
                          </div>                        
                          <div class="item-title">
                            <a href="/newsDetails/<%=newsData[classes[i]][0]._id%>/<%= newsData[classes[i]][0].title.trim().replace(/\s/g,'-')%>"><%= newsData[classes[i]][0].title%></a>        
                            <div class="date-cont">
                              <%= newsData[classes[i]][0].bdFormatTime.timeString%>
                            </div>
                          </div> 
                          
                        </div>      
                      </div>                      
                    </div>
                   
                    <% for (let j=1; j< Math.min(newsData[classes[i]] .length, 10); j++) { %>
                      <div class="news-card">         
                        <div class="news-cont">
                          <div class="img-cont">
                            <img class="news_image"
                              src="<%=newsData[classes[i]][j].photoUrl%>"
                              alt="This image is not found"
                            />
                          </div>                        
                          <div class="item-title">
                            <a href="/newsDetails/<%=newsData[classes[i]][j]._id%>/<%= newsData[classes[i]][j].title.trim().replace(/\s/g,'-')%>"><%= newsData[classes[i]][j].title%></a>        
                            <div class="date-cont">
                              <%= newsData[classes[i]][j].bdFormatTime.timeString%>
                            </div>
                          </div> 
                          
                        </div>      
                      </div>
                    <% } %>
                  </div>  
                  
                </div> 
              </div>
            <% } %>
          <% } %>

          <div class="flx-vid-container">

            <div class="flx-cld-major">
              <div class="section-title">
                সাম্প্রতিক ভিডিও
              </div>
              <% for (let i=0; i< vidData .length; i++) { %>
              <div class="flx-card">
                <iframe
                  src="<%=vidData[i].videoUrl%>"
                  frameborder="0"
                  allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                >
                </iframe>
                <% if( vidData [i].title.length > 60) { %>
                <div class="item-title">
                  <%= vidData [i].title.substring(0,59) + ' . . .'%>
                </div>
                <%} else{ %>
                <div class="item-title">
                  <%= vidData [i].title%>
                </div>
                <% } %>
              </div>
              <% } %>
              <div class="see-more">
                  <a href="/videos">আরও দেখুন...</a>
              </div>
            </div>

          </div>
        </main>
      </div>
    </div>

    <% include ./segments/footer.ejs %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <script>
      $(document).ready(function()
      {
          $(".news_image").on("error", function(){
            console.log("image loading err")
              $(this).attr('src', '/assets/images/purboposhcim_cover.jpg');
          });
      });

      $('.carousel').carousel({
        interval: 4000
      })
      $('.carousel').carousel('cycle')

    </script>
  </body>
</html>
